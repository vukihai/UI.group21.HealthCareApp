<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".step_counter.StepCounterActivity">
    <ScrollView
        android:id="@+id/scrollView"
        style="@style/AppTheme"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0sp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:text="@string/today"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="30sp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/circle_step"
                        android:layout_width="200dp"
                        android:layout_height="300dp"
                        android:layout_margin="10dp"
                        android:layout_gravity="center"
                        app:cpb_background_progressbar_color="#DAFAEA"
                        app:cpb_background_progressbar_width="2dp"
                        app:cpb_progress_direction="to_right"
                        app:cpb_progressbar_color="#69F79C"
                        app:cpb_progressbar_width="10dp"
                        app:cpb_round_border="false" />
                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="55dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="16dp"
                        app:srcCompat="@drawable/icon" />
                    <TextView
                        android:id="@+id/num_step_today"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:layout_marginRight="30dp"
                        android:layout_gravity="center"
                        android:text="19256"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textSize="30sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold" />
                    <View
                        android:layout_width="140dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:background="#FFFFFF" />
                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="45dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="46dp"
                        app:srcCompat="@drawable/ic_target_svgrepo_com"
                        tools:ignore="VectorDrawableCompat" />
                    <Button
                        android:id="@+id/change_target_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="46dp"
                        android:background="@android:color/transparent"
                        android:text="1500"
                        android:textColor="@android:color/white"
                        android:textAllCaps="false"
                        android:textStyle="bold" />
                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="45dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="46dp"
                        app:srcCompat="@drawable/icon" />

                </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="230dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textVie2"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_marginLeft="15sp"
                        android:layout_weight="1"
                        android:gravity="start|center"
                        android:text=" 0 phút"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textVi2"
                        android:layout_width="10dp"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:text="|"
                        android:textAllCaps="false"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/distance"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:text=" 0 km"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:text="|"
                        android:textAllCaps="false"
                        android:textSize="24sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:layout_weight="1"
                        android:gravity="start|center_vertical"
                        android:text=" 0 calos"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </FrameLayout>

<!--            <LinearLayout-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="40sp"-->
<!--                android:gravity="center"-->
<!--                android:orientation="horizontal">-->

<!--                <Button-->
<!--                    android:id="@+id/button"-->
<!--                    android:layout_width="175dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:background="@drawable/border_radius"-->
<!--                    android:text="Đặt mục tiêu" />-->

<!--                <Button-->
<!--                    android:id="@+id/button1"-->
<!--                    android:layout_width="175dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginLeft="10dp"-->
<!--                    android:background="@drawable/border_radius"-->
<!--                    android:text="Chạy bộ đếm" />-->
<!--            </LinearLayout>-->

            <FrameLayout
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="300dp">
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/historyStepCounterChart"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </FrameLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>

