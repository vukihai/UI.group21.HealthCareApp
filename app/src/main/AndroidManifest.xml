<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ui.group21.HealthCareApp">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".heart_rate_monitor.HeartRateMeasuringActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".heart_rate_monitor.HeartRateMonitorActivity" />
        </activity>
        <activity android:name=".UserProfileActivity" />
        <activity android:name=".inavtive_time_reminder.InactiveTimeReminderActivity" />
        <activity android:name=".smart_alarm.SmartAlarmActivity" />
        <activity android:name=".sleep_recorder.SleepAnalysisActivity" android:exported="true" />
        <activity android:name=".sleep_recorder.SleepRecorderActivity" android:exported="true" />
        <activity android:name=".route_tracker.TrackingResultsActivity" />
        <activity android:name=".route_tracker.RouteTrackerActivity" />
        <activity android:name=".step_counter.StepCounterResultsActivity">
            </activity>
        <activity android:name=".step_counter.StepCounterActivity" ><intent-filter>
            <action android:name="android.intent.action.MAIN" />

            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter></activity>
        <activity android:name=".heart_rate_monitor.HeartRateResultActivity" />
        <activity android:name=".heart_rate_monitor.HeartRateMonitorActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity android:name=".MainActivity">

        </activity>
        <service android:name=".sleep_recorder.SleepRecorderService" />
    </application>

</manifest>
